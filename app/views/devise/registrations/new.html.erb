<!-- login section start -->
<section class="login-wrapper">
  <div class="container">
    <div class="col-md-6 col-sm-8 col-md-offset-3 col-sm-offset-2">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <!-- <img class="img-responsive" alt="logo" src="/assets/logo.png"> -->
        <% if session[:company] %>
          <%= f.hidden_field :role, value: "Company" %>
          <h2>Perusahaan Daftar</h2>
        <% else %>
          <%= f.hidden_field :role, value: "User" %>
          <h2>Kandidat Daftar</h2>
        <% end %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control input-lg", placeholder: "Nama" %>
        <% if session[:company] %>
          <%= f.text_field :company_name, autocomplete: "company_name", class: "form-control input-lg", placeholder: "Nama Perusahaan" %>
        <% end %>
        <%= f.email_field :email, autocomplete: "email", class: "form-control input-lg", placeholder: "Email" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control input-lg", placeholder: "Password" %>
        <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "form-control input-lg", placeholder: "Konfirmasi Password" %>
        <%= button_tag "Daftar", type: "submit", class: "btn btn-primary" %>
        <%#= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</section>
<!-- login section End -->
