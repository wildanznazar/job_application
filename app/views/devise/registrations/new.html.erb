      </div>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 form-box">
          <div class="form-top">
            <div class="form-top-left">
              <% if session[:company] %>
                <h3>Daftar Sebagai Perusahaan</h3>
              <% else %>
                <h3>Daftar Sebagai Kandidat</h3>
              <% end %>
              <p>Sudah menjadi anggota? <%= link_to "Masuk", "/auth/users/sign_in" %></p>
            </div>
            <div class="form-top-right">
              <i class="fa fa-user-plus"></i>
            </div>
          </div>
          <div class="form-bottom">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-group">
                <label class="sr-only" for="form-username">Nama</label>
                <%= f.text_field :name, autofocus: true, autocomplete: "off", class: "form-username form-control", placeholder: "Nama", id: "form-username" %>
              </div>
              <% if session[:company] %>
                <div class="form-group">
                  <label class="sr-only" for="form-company">Nama Perusahaan</label>
                  <%= f.text_field :company_name, autocomplete: "off", class: "form-username form-control", placeholder: "Nama Perusahaan", id: "form-company" %>
                </div>
              <% end %>
              <div class="form-group">
                <label class="sr-only" for="form-email">Email</label>
                <%= f.email_field :email, autocomplete: "off", id: "form-email", class: "form-username form-control", placeholder: "Email" %>
              </div>
              <div class="form-group">
                <label class="sr-only" for="form-password">Password</label>
                <%= f.password_field :password, autocomplete: "off", class: "form-password form-control", id: "form-password", placeholder: "Password" %>
              </div>
              <div class="form-group">
                <label class="sr-only" for="form-password-confirmation">Konfirmasi Password</label>
                <%= f.password_field :password, autocomplete: "off", class: "form-password form-control", id: "form-password-confirmation", placeholder: "Konfirmasi Password" %>
              </div>
              <button type="submit" class="btn">Daftar</button>
            <% end %>
          </div>
        </div>
      </div>
