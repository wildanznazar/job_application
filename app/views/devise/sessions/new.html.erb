      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 form-box">
          <div class="form-top">
            <div class="form-top-left">
              <% if session[:company] %>
                <h3>Silahkan Masuk</h3>
                <p>Inputkan email dan password Anda</p>
              <% else %>
                <h3>Silahkan Masuk</h3>
                <p>Pengguna baru? <%= link_to "Daftar Gratis Sekarang", "/auth/users/sign_up" %></p>
              <% end %>
            </div>
            <div class="form-top-right">
              <i class="fa fa-sign-in"></i>
            </div>
          </div>
          <div class="form-bottom">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>
              <div class="form-group">
                <label class="sr-only" for="form-username">Email</label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "form-username", class: "form-username form-control", placeholder: "Email" %>
              </div>
              <div class="form-group">
                <label class="sr-only" for="form-password">Password</label>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-password form-control", id: "form-password", placeholder: "Password" %>
              </div>
              <button type="submit" class="btn">Masuk</button>
            <% end %>
          </div>
        </div>
      </div>
